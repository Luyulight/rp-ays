{
  "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "declaration": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      // "strict": true,
      // "skipLibCheck": true,
      "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}